<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="product">
        <pattern value="/product/#{userController.code}"/>
        <view-id value="/product.xhtml"/>
        <action>#{userController.findProduct}</action>
    </url-mapping>

    <url-mapping id="home">
        <pattern value="/"/>
        <view-id value="/index.xhtml"/>
    </url-mapping>

    <url-mapping id="cart">
        <pattern value="/cart"/>
        <view-id value="/cart.xhtml"/>
    </url-mapping>

    <url-mapping id="viewCatalog">
        <pattern value="/products"/>
        <view-id value="/products.xhtml"/>
        <action>#{userController.listProducts}</action>
    </url-mapping>

    <url-mapping id="search">
        <pattern value="/search/#{searchBean.searchterm}"/>
        <view-id value="/products.xhtml"/>
        <action>#{searchBean.searchProducts}</action>
    </url-mapping>

    <url-mapping id="registration">
        <pattern value="/register"/>
        <view-id value="register.xhtml"/>
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="login.xhtml"/>
    </url-mapping>

    <url-mapping id="logout">
        <pattern value="/logout"/>
        <view-id value="logout.xhtml"/>
        <action>#{login.logout}</action>
    </url-mapping>

</pretty-config>